<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tap_shop.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.tap_shop.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/categoryWiseAllProductFragment"
        android:name="com.example.tap_shop.ui.home.CategoryWiseAllProductFragment"
        android:label="All Product"
        tools:layout="@layout/fragment_category_wise_all_product" />

    <dialog
        android:id="@+id/categoryBottomSheetDialog"
        android:name="com.example.tap_shop.ui.home.ProductDetailsBottomSheetFragment"
        tools:layout="@layout/product_details_bottom_sheet_dialog"/>
</navigation>